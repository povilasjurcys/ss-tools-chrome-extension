{
  "name": "Chrome SS Tools",
  "description": "Tools for SameSystem CI pages",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ],
  "content_scripts": [
    {
      "matches": ["https://ci.samesystem.net/job/alfa/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "hello.html",
    "default_icon": "logo.png"
  }
}
